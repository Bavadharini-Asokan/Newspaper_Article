<div class="container" style="margin-top:50px;">

<div class="col-lg-6">
    <h2 style="margin-top:100px;">CREATE A NEW ARTICLE HERE!</h2>
  </div>

<div class="col-lg-6">
  <%= form_with scope: :article, url: articles_path, local: true do |form| %>
  <p id='hiddenValue'>
    <%= form.hidden_field :newsid, :value => @getnewsid %>
  </p>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title, style:'width:400px;height:50px;'%>
    </p>
    <p>
      <%= form.label :text %></br>
      <%= form.text_area :description, style:'width:400px;height:150px;' %>
    </p>

    <p style="margin-left:100px;">
      <%= form.submit 'Save Article', class:'btn btn-primary' %>
      <%= link_to "<button style='background-color:#337ab7;border:none;'>Back</button>".html_safe , article_path(@getnewsid), class: 'btn btn-primary' %>
    </p>

  <% end %>
</div>
</div>
<script>
  $(document).ready(function() {
    $("hiddenValue").hide();
  });
  </script>
