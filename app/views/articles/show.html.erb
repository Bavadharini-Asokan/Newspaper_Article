<p id="notice" style ="margin-top:50px;color:green;font-sixe:20px;margin-left:1000px;"><%= notice %></p>
<div class="container" style="margin-top:40px">
<p id='hidden'>
<%= i = 1 %>
<%= articleCount = @article.count() %>
</p>
<% if articleCount == 0 %>
<center>
  <%= link_to 'Create Article', new_article_path(:news_id => @news_id), style:"margin-top:60px" %>
  </center>
<% end %>

<% @article.each do |article| %>
<div class="col-lg-5" style="height:400px;">
  <%= image_tag("news.jpeg", width: '400px', alt: "Edit Entry") %>
</div>
  <div class="col-lg-7" style="width:550px;height:400px;">
    <h2><%= article.title %></h2></br>
    <%= article.description %></br>
    <%= link_to(image_tag("editicon.png", width:'20px', height:'20px',style:'margin-left:450px'), edit_article_path(article,:news_id => @news_id)) %>
    <%= link_to(image_tag("deleteicon.png", width:'20px', height:'20px'), article_path(article),method: :delete,
    data: {
      confirm: "You want to delete this article?"
    }) %>
</div></br>
<% if i == articleCount %>
<center>
  <%= link_to "<button id='button_id'>Create Article</button>".html_safe , new_article_path(:news_id => article.newsid), style:"margin-bottom:20px;", class: 'btn btn-primary' %>
  <%= link_to "<button id='button_id1'>Back</button>".html_safe , welcome_index_path, style:"margin-bottom:20px;", class: 'btn btn-primary' %>

  </center>
<% end %>
<%= hidden_field :givenvalue, i += 1 %>
<% end %>
</div>
<script>
  $(document).ready(function() {
  $( "#hidden" ).hide();
   $("#notice" ).fadeOut(3000);
});
</script>
<style>
#button_id{
  background-color:#337ab7;
  border: none;
}
#button_id1{
  background-color:#337ab7;
  border: none;
}
</style>
