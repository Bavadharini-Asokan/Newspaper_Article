<div class="container" style="margin-top:50px;">

<div class="col-lg-6">
    <h2 style="margin-top:100px;">EDIT YOUR ARTICLE HERE!</h2>
  </div>

<div class="col-lg-6">
<%= form_with model: @article, local: true do |form| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, style:'width:400px;height:50px;' %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description, style:'width:400px;height:150px;' %>
  </p>

  <p style="margin-left:100px;">
    <%= form.submit 'Update Article', class:'btn btn-primary' %>
      <%= link_to "<button style='background-color:#337ab7;border:none;'>Back</button>".html_safe , article_path(@article.newsid), class: 'btn btn-primary' %>
  </p>

<% end %>


</div>
