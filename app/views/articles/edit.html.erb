<div class="container" style="margin-top:50px;">

<div class="col-lg-6">
    <h2 style="margin-top:100px;">EDIT YOUR ARTICLE HERE!</h2>
  </div>

<div class="col-lg-6">
<%= form_with model: @article, local: true do |form| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li style="color:red;"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, style:'width:400px;height:50px;' %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description, style:'width:400px;height:150px;' %>
  </p>

  <p style="margin-left:100px;">
    <%= form.submit 'Update Article', class: 'btn btn-success' %>
      <%= link_to "<button class='btn btn-success'>Back</button>".html_safe , articles_path(:id => @article.newsid)%>
  </p>

<% end %>


</div>
